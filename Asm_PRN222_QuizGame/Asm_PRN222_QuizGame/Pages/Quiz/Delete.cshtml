@page
@model Asm_PRN222_QuizGame.Admin.Pages.Quiz.DeleteModel
@{
    ViewData["Title"] = "Delete Quiz";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Delete Quiz</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            @if (Model.Quiz != null)
            {
                <h4>Are you sure you want to delete this quiz?</h4>

                <dl class="row">
                    <dt class="col-sm-2">Quiz ID</dt>
                    <dd class="col-sm-10">@Model.Quiz.QuizId</dd>

                    <dt class="col-sm-2">Quiz Name</dt>
                    <dd class="col-sm-10">@Model.Quiz.QuizName</dd>

                    <dt class="col-sm-2">Questions</dt>
                    <dd class="col-sm-10">
                        @if (Model.Quiz.Questions.Any())
                        {
                            <ul>
                                @foreach (var question in Model.Quiz.Questions)
                                {
                                    <li>
                                        <strong>Question ID:</strong> @question.QuestionId <br />
                                        <strong>Text:</strong> @question.QuestionText <br />
                                        <strong>Correct Answer:</strong> @question.CorrectAnswer
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No questions found.</p>
                        }
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" name="QuizId" value="@Model.Quiz.QuizId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </form>
            }
            else
            {
                <p class="text-center text-muted">Quiz not found.</p>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>
