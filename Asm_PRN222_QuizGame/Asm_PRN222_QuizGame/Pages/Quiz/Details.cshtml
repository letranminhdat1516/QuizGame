@page
@model Asm_PRN222_QuizGame.Admin.Pages.Quiz.DetailsModel
@{
    ViewData["Title"] = "Delete Quiz";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Quiz Details</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            @if (Model.Quiz != null)
            {
              
                @if (Model.Quiz != null)
                {
                    <dl class="row">
                        <dt class="col-sm-2">Quiz ID</dt>
                        <dd class="col-sm-10">@Model.Quiz.QuizId</dd>

                        <dt class="col-sm-2">Quiz Name</dt>
                        <dd class="col-sm-10">@Model.Quiz.QuizName</dd>

                        <dt class="col-sm-2">Questions</dt>
                     
                        <dd class="col-sm-10">
                            @if (Model.Quiz.Questions.Any())
                            {
                                <ul>
                                    @foreach (var question in Model.Quiz.Questions)
                                    {
                                        <li>
                                            <strong>Question ID:</strong> @question.QuestionId <br />
                                            <strong>Text:</strong> @question.QuestionText <br />
                                            <strong>Correct Answer:</strong> @question.CorrectAnswer
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>No questions found.</p>
                            }
                        </dd>
                    </dl>

                }
                else
                {
                    <p class="text-center text-muted">Quiz not found.</p>
                }


                <div class="mt-3">
                    <a asp-page="./EditQuiz" asp-route-id="@Model.Quiz.QuizId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-page="./DeleteQuiz" asp-route-id="@Model.Quiz.QuizId" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            }
            else
            {
                <p class="text-center text-muted">Quiz not found.</p>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>
