@page
@model Asm_PRN222_QuizGame.Admin.Pages.Score.DeleteScoreModel
@{
    ViewData["Title"] = "Delete Score";
}

<div class="container mt-4">
    <h2 class="text-center text-danger fw-bold">Delete Score</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            <h4 class="text-center">Are you sure you want to delete this score?</h4>

            @if (Model.Score != null)
            {
                <dl class="row">
                    <dt class="col-sm-2">Team Score ID</dt>
                    <dd class="col-sm-10">@Model.Score.TeamScoreId</dd>
                    <dt class="col-sm-2">Team Name</dt>
                    <dd class="col-sm-10">@Model.Score.TeamName</dd>
                    <dt class="col-sm-2">Score</dt>
                    <dd class="col-sm-10">@Model.Score.Score</dd>
                    <dt class="col-sm-2">Rank</dt>
                    <dd class="col-sm-10">@Model.Score.Rank</dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Score.TeamScoreId" />
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="./ScoreIndex" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            }
            else
            {
                <p class="text-center text-muted">Score not found.</p>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>