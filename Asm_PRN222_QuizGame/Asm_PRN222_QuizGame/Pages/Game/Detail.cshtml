@page
@model Asm_PRN222_QuizGame.Admin.Pages.Game.DetailsModel
@{
    ViewData["Title"] = "Game Details";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Game Details</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            @if (Model.Game != null)
            {
                <h4>Game Name: @Model.Game.GameName</h4>
                <div class="table-responsive mt-4">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr class="text-center">
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>
