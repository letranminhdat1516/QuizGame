@page
@model Asm_PRN222_QuizGame.Pages.JoinGameModel
@{
    ViewData["Title"] = "Join Game";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Join a Game</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="gamePin" class="control-label">Enter Game PIN</label>
                    <input type="text" name="gamePin" class="form-control" placeholder="Enter PIN" />
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Join Game</button>
                </div>
            </form>

            @if (Model.Quiz != null)
            {
                <div class="mt-4">
                    <h4 class="text-center text-success">Successfully joined the game!</h4>
                    <dl class="row">
                        <dt class="col-sm-2">Quiz ID</dt>
                        <dd class="col-sm-10">@Model.Quiz.QuizId</dd>
                        <dt class="col-sm-2">Quiz Name</dt>
                        <dd class="col-sm-10">@Model.Quiz.QuizName</dd>
                    </dl>
                    <div class="text-center">
                        <a asp-page="/Game/Play" asp-route-gameId="@Model.GameId" class="btn btn-success">Start Playing</a>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>