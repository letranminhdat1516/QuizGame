@page
@model Asm_PRN222_QuizGame.Admin.Pages.Game.DeleteModel
@{
    ViewData["Title"] = "Delete Game";
}

<div class="container mt-4">
    <h2 class="text-center text-danger fw-bold">Delete Game</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            <h4 class="text-center">Are you sure you want to delete this game?</h4>

            @if (Model.Game != null)
            {
                <dl class="row">
                    <dt class="col-sm-2">Game ID</dt>
                    <dd class="col-sm-10">@Model.Game.GameId</dd>
                    <dt class="col-sm-2">Game Name</dt>
                    <dd class="col-sm-10">@Model.Game.GameName</dd>
                    <dt class="col-sm-2">Game Pin</dt>
                    <dd class="col-sm-10">@Model.Game.GamePin</dd>
                    <dt class="col-sm-2">Status</dt>
                    <dd class="col-sm-10">@Model.Game.Status</dd>
                    <dt class="col-sm-2">Start Time</dt>
                    <dd class="col-sm-10">@Model.Game.StartTime?.ToString("yyyy-MM-dd HH:mm")</dd>
                    <dt class="col-sm-2">End Time</dt>
                    <dd class="col-sm-10">@Model.Game.EndTime?.ToString("yyyy-MM-dd HH:mm")</dd>
    
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Game.GameId" />
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            }
            else
            {
                <p class="text-center text-muted">Game not found.</p>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>