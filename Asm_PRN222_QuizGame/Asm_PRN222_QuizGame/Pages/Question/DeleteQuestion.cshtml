@page
@model Asm_PRN222_QuizGame.Admin.Pages.Question.DeleteQuestionModel
@{
    ViewData["Title"] = "Delete Question";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Delete Question</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            <h4>Are you sure you want to delete this question?</h4>
            <dl class="row">
                <dt class="col-sm-2">Question ID</dt>             
                <dd class="col-sm-10">@Model.Question.QuestionId</dd>
           
                <dt class="col-sm-2">Quiz ID</dt>               
                <dd class="col-sm-10">@Model.Question.QuizId</dd>

                <dt class="col-sm-2">Question Name</dt>
                <dd class="col-sm-10">@Model.Question.QuizName</dd>

                <dt class="col-sm-2">Question Text</dt>
                <dd class="col-sm-10">@Model.Question.QuestionText</dd>
               
                <dt class="col-sm-2">Correct Answer</dt>
                <dd class="col-sm-10">@Model.Question.CorrectAnswer</dd>

                <dt class="col-sm-2">Option1</dt>
                <dd class="col-sm-10">@Model.Question.Option1</dd>

                <dt class="col-sm-2">Option2 </dt>
                <dd class="col-sm-10">@Model.Question.Option2</dd>

                <dt class="col-sm-2">Option 3</dt>
                <dd class="col-sm-10">@Model.Question.Option3</dd>

                <dt class="col-sm-2">Option 4</dt>
                <dd class="col-sm-10">@Model.Question.Option4</dd>

                <dt class="col-sm-2">TimeLimit</dt>
                <dd class="col-sm-10">@Model.Question.TimeLimit</dd>

                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">@Model.Question.Status</dd>


            </dl>

            <form method="post">
                <input type="hidden" asp-for="Question.QuestionId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./QuestionIndex" class="btn btn-secondary">Cancel</a>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>