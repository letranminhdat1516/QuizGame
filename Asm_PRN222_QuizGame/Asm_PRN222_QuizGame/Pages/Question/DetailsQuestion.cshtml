@page
@model Asm_PRN222_QuizGame.Admin.Pages.Question.DetailsModel
@{
    ViewData["Title"] = "Question Details";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Question Details</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4 mt-4">
        <div class="card-body">
            @if (Model.Question != null)
            {
                <dl class="row">
                    <dt class="col-sm-2">Question ID</dt>
                    <dd class="col-sm-10">@Model.Question.QuestionId</dd>
                    <dt class="col-sm-2">Quiz ID</dt>
                    <dd class="col-sm-10">@Model.Question.QuizId</dd>
                    <dt class="col-sm-2">Question Text</dt>
                    <dd class="col-sm-10">@Model.Question.QuestionText</dd>
                    <dt class="col-sm-2">Correct Answer</dt>
                    <dd class="col-sm-10">@Model.Question.CorrectAnswer</dd>
         
                   
                </dl>

                <div class="mt-3">
                    <a asp-page="./EditQuestion" asp-route-id="@Model.Question.QuestionId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-page="./DeleteQuestion" asp-route-id="@Model.Question.QuestionId" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                    <a asp-page="./QuestionIndex" class="btn btn-secondary">Back to List</a>
                </div>
            }
            else
            {
                <p class="text-center text-muted">Question not found.</p>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>