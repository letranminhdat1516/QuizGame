@page 
@model Asm_PRN222_QuizGame.Admin.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f5f5f5;
        }

        .login-container {
            max-width: 400px;
            margin: 70px auto;
            padding: 20px;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .login-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .login-header img {
                max-width: 100px;
                margin-bottom: 10px;
            }

        .btn-primary {
            width: 100%;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="login-header">
            <img src="~/image/download.png" alt="QuizGame Logo" class="rounded-circle" />
            <h2>Login Admin</h2>
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center">
                @Model.ErrorMessage
            </div>
        }
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="AccountMember.Email" class="form-label">Email</label>
                <input asp-for="AccountMember.Email" class="form-control" placeholder="Enter your email" required />
                <span asp-validation-for="AccountMember.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="AccountMember.Password" class="form-label">Password</label>
                <input type="password" asp-for="AccountMember.Password" class="form-control" placeholder="Enter your password" required />
                <span asp-validation-for="AccountMember.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mb-3">Login</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
